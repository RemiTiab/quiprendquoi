include ../partials/header.pug
.wrapper
  .container
    h1.container__title= party.name
    h2.subtitle Modifier une proposition de lieu
    each item in party.items
      if item._id == idElement
        form.form(method="post" action=`/party/${idParty}/items/${item._id}?_method=PATCH`)
          .form__fields.form__fields--element
            label(for="name") Lieu de l'événement
            input( type="text" name="name" required minlength="3" maxlength="25" placeholder="Paris" value=`${item.name}`)
            label(for="user") Votre pseudo
            input(type="text" name="user" required minlength="3" maxlength="25" placeholder="Pseudo" value=`${item.user}`)
            input.button.vibrate(type="submit" value="modifier" data-notification="updatePlaces")
include ../partials/footer.pug
